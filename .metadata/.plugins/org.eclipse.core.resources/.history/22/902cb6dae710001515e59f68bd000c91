package task2.tests;

import java.util.Stack;



public class QueueStackTests<T> {
	
	private Stack<T> s1 = new Stack<T>();
    private Stack<T> s2 = new Stack<T>();

    public synchronized void add(T item) {
        s1.push(item);
    }

    public synchronized T remove() {
        flipStacks();
        return s2.pop();
    }

    private void flipStacks() {
        while (s2.size() != 0) {
            T item = s1.pop();
            s2.push(item);
        }
    }
	
	public static void main(String[] args) {
		QueueStackTests<Integer> queue = new QueueStackTests<Integer>();
		
		queue.add(1);
		queue.add(2);
		queue.add(3);
		
		System.out.println(queue.remove());
		queue.add(4);
		System.out.println(queue.remove());
		
	}

}
