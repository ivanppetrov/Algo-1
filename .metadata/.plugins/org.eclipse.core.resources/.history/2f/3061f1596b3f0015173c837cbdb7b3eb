package task0.tests;

import static org.junit.Assert.*;

import java.util.Arrays;
import java.util.Random;

import org.junit.BeforeClass;
import org.junit.Test;

import task0.solutions.BinaryHeap;

public class BinaryHeapTests {
	static int size;
	static int[] testArray;
	static int[] workingArray;
	static BinaryHeap heap;
	static Random rd;
	static int index;
	
	@BeforeClass
	public static void setUpBeforeClass() throws Exception {
		size = 20;
		int buffer = 7;
		rd = new Random();
		testArray = new int[size];
		workingArray = new int[size];
		
		for (int i = 0; i < size - buffer; i++) {
			int value = rd.nextInt(2 * size);
			testArray[i] = value;
			heap.insertMin(value);
			index = i;
		}
		
		Arrays.sort(testArray);
		heap = new BinaryHeap();
	}

	@Test
	public void test() {
//		for (int i = 0; i < workingArray.length; i++) {
//			(workingArray[i]);
//		}
		
		for (int i = 0; i < testArray.length; i++) {
			assertEquals(testArray[i], heap.getTop());
			heap.removeMin();
			int newValue = 0;
			if (i % 7 == 0) {
				newValue = rd.nextInt(2 * size);
				testArray[++index] = newValue;
				Arrays.sort(testArray);
				heap.insertMin(newValue);
			}
		}

	}

}
