package task1.solutions;

public class BinarySearch {
	public static int binarySearch(int[] array, int element, int left, int right) {
		if (left == right && array[left] == element) {
			return left;
		} else {
			int mid = left + right/2;
			if (element <= array[mid]) {
				binarySearch(array, element, left, mid);
			} else{
				binarySearch(array, element, mid + 1, right);
			}
		}
		
		return -1;
	}
}
