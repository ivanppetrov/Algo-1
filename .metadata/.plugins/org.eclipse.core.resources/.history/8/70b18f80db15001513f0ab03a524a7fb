package task0.solutions;

public class BinaryHeap {
	private static final int SIZE = 10000;
	private int[] data;
	private int index;
	
	public BinaryHeap() {
		this.data = new int[SIZE];
		this.index = 0;
	}
	
	public void insert(int element) {
		data[index++] = element;
		
		for (int i = index; i > 1; i /= 2) {
			int parent = data[i/2];
			if (element < parent) {
				//swap parent and element
				data[i/2] = element;
				data[index] = parent;
			} else {
				break;
			}
		}
	}
	
	public int removeMax() {
		return 0;
	}
	
	public int getMax() {
		return data[1];
	}
}
