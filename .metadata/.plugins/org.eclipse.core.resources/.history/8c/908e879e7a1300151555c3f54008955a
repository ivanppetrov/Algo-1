package task1.tests;

import static org.junit.Assert.*;

import java.util.Random;

import org.junit.BeforeClass;
import org.junit.Test;

public class SearchTests {
	private static final int NUMBER_OF_ARRAYS = 10;
	private static final int ARRAY_BOUND = 10000;
	@BeforeClass
	public static void setUpBeforeClass() throws Exception {
		
	}

	@Test
	public void test() {
		Random random = new Random();
		for (int i = 0; i < NUMBER_OF_ARRAYS; i++) {
			int[] array = TestGenerator.generateTestArray(random.nextInt(ARRAY_BOUND));
			int searchedElement = array[random.nextInt(ARRAY_BOUND)];
			System.out.println(TestGenerator.isContain(array, searchedElement));
		}
		
		double a = 8*Math.pow(10, 15);
		double b = 8*Math.pow(10, 15) + 1;
		System.out.println(a + " : "+ b);
	}

}
