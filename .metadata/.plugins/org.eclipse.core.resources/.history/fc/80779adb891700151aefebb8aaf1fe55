package task2.solutions;

import java.util.ArrayList;
import java.util.Collections;
import java.util.List;

import task0.solutions.BinarySearch;

public class BirthadyRanges {
	//rewrite with binary search
	public static List<Integer> countBirthdays(List<Integer> birthdays, List<Pair> ranges) {
		List<Integer> result = new ArrayList<Integer>();
		Collections.sort(birthdays);
		int[] bdayArray = new int[birthdays.size()];
		
		for (int i = 0; i < bdayArray.length; i++) {
			bdayArray[i] = birthdays.get(i);
		}
		
		for (Pair pair : ranges) {
			int start = 0, end = 0;
			start = BinarySearch.binarySearch(bdayArray, pair.getStart(), 0, bdayArray.length - 1);
			end = BinarySearch.binarySearch(bdayArray, pair.getEnd(), 0, bdayArray.length - 1);
			
			result.add(end - start);
		}
		
		return result;
	}
}
